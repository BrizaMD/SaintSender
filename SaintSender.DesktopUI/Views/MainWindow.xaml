<Window x:Class="SaintSender.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI" xmlns:local1="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="SainSender"
        Height="450"
        Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Canvas 
            x:Name="Header" 
            HorizontalAlignment="Left" 
            Height="60" 
            VerticalAlignment="Top" 
            Width="800" 
            Background="White" 
            Opacity="0.8"
            Margin="0,24,0,0" 
            Grid.ColumnSpan="2">
            <Grid Name="UserControls" Visibility="Hidden">
                <Button Canvas.Left="721" Canvas.Top="30" Margin="12,117,-12,-117">Refresh</Button>
                <Button Canvas.Left="674" Canvas.Top="30" RenderTransformOrigin="1.607,0.328" Margin="131,117,-131,-117">Backup</Button>
                <Button Canvas.Top="40" Margin="12,69,-12,-69">Previous</Button>
                <Button Canvas.Left="65" Canvas.Top="40" Margin="131,69,-131,-69">Next</Button>
                <CheckBox Canvas.Left="667" Canvas.Top="10" Margin="10,8,-10,-8">Stay logged-in</CheckBox>
                <Button Canvas.Top="35" Canvas.Left="380" Margin="12,33,-12,-33">Forget Me</Button>
            </Grid>
        </Canvas>


        <Grid>
            <ListView Margin="10" 
                      Width="600" 
                      Height="200" 
                      Name="Inbox"
                      Background="White" 
                        Opacity="0.8"
                      Visibility="Hidden">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding From}"/>
                            <TextBlock Text="{Binding Subject}"/>
                            <TextBlock Text="{Binding Date}"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Grid>

        <Button Name="LoginState"
                Margin="679,45,31,335" 
                Content="Login" 
                Cursor="Hand"
                FontSize="20"
                FontWeight="Bold"
                Click="Login">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">  
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="DarkGoldenrod" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
