<Window x:Class="SaintSender.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI"
        mc:Ignorable="d"
        Title="SainSender"
        Height="450"
        Width="800">
    <Grid>
        <Canvas 
            x:Name="Header" 
            HorizontalAlignment="Left" 
            Height="60" 
            VerticalAlignment="Top" 
            Width="800" 
            Background="Crimson" 
            Opacity="0.8"
            Margin="0,24,0,0" 
            Grid.ColumnSpan="2">

            <Button Canvas.Left="717" Canvas.Top="40">Refresh</Button>
            <Button Canvas.Top="40">Previous</Button>
            <Button Canvas.Left="65" Canvas.Top="40">Next</Button>


        </Canvas>

        <TabControl   
                Height="200"
                Width="400" 
            RenderTransformOrigin="0.5,0.5" 
            Canvas.Top="-3" 
            Canvas.Left="10">
            <TabControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.214"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.746"/>
                </TransformGroup>
            </TabControl.RenderTransform>
            <TabItem 
                    Header="Inbox">
                <!--<local:MailList 
                        FontSize="15" 
                        RenderTransformOrigin="0.567,0.532"
                        HorizontalAlignment="Left"
                        Height="526" 
                    Width="1022" 
                        Margin="-7,0,0,0"
                        />-->
            </TabItem>
        </TabControl>


        <Button Name="LoginState"
                Margin="33,293,430.333,-0.333" 
                Content="Login" 
                Cursor="Hand"
                FontSize="20"
                FontWeight="Bold" Click="Login">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">  
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="DarkGoldenrod" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
