<Window x:Class="SaintSender.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI" xmlns:local1="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="SainSender"
        Height="450"
        Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Canvas 
            x:Name="Header" 
            HorizontalAlignment="Left" 
            Height="60" 
            VerticalAlignment="Top" 
            Width="800" 
            Background="White" 
            Opacity="0.8"
            Margin="0,24,0,0" 
            Grid.ColumnSpan="2">
            <Grid Name="UserControls" Visibility="Hidden">
                <Button
                Style="{StaticResource RoundButtonTemplate}"
                BorderBrush="#fff"
                Name="Refresh"
                Content="Refresh"
                Foreground="white"
                Background="black"
                Width="80"
                Height="40"
                FontSize="15" Canvas.Left="1155" Canvas.Top="8" Margin="1,220,56,-220"
                />

                <Button
                Style="{StaticResource RoundButtonTemplate}"
                BorderBrush="#fff"
                Name="BackUp"
                Content="Backup"
                Foreground="white"
                Background="black"
                Width="80"
                Height="40"
                FontSize="15" 
                Canvas.Left="1155" Canvas.Top="8" Margin="1,159,56,-159"
                />

                <Button
                Style="{StaticResource RoundButtonTemplate}"
                BorderBrush="#fff"
                Name="Previous"
                Content="Previous"
                Foreground="white"
                Background="black"
                Width="80"
                Height="40"
                FontSize="15" 
                Canvas.Left="1155" Canvas.Top="8" Margin="228,345,-171,-345"
                />

                <Button
                Style="{StaticResource RoundButtonTemplate}"
                BorderBrush="#fff"
                Name="Next"
                Content="Next"
                Foreground="white"
                Background="black"
                Width="80"
                Height="40"
                FontSize="15" 
                Canvas.Left="1155" Canvas.Top="8" Margin="450,345,-393,-345"
                />

                <Button
                Style="{StaticResource RoundButtonTemplate}"
                BorderBrush="#fff"
                Name="ForgetMe"
                Content="Forget Me"
                Foreground="white"
                Background="black"
                Width="120"
                Height="25"
                FontSize="15" 
                Canvas.Left="1155" Canvas.Top="8" Margin="1,31,16,-11"
                />

                <CheckBox Canvas.Left="667" Canvas.Top="10" Margin="10,8,-10,-8">Stay logged-in</CheckBox>
            </Grid>
        </Canvas>
        <Grid>
            <ListView Margin="10" 
                      Width="600" 
                      Height="200" 
                      Name="Inbox"
                      Background="White" 
                        Opacity="0.8"
                      Visibility="Hidden">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding From}"/>
                            <TextBlock Text="{Binding Subject}"/>
                            <TextBlock Text="{Binding Date}"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Grid>

        <Button Name="LoginState"
                Margin="679,45,31,335" 
                Content="Login" 
                Cursor="Hand"
                FontSize="20"
                FontWeight="Bold"
                Click="Login">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">  
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="DarkGoldenrod" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
